<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_edit_text">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/close_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="275dp"
            android:background="@drawable/highlighter_cross" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="285dp"
            android:layout_height="82dp"
            android:layout_marginTop="-45dp"
            android:src="@drawable/lb_add_an_item" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="In which collection would you like to create your item?"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/editText11"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_edit_text"
            android:hint="Insert Item Name"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="250dp"
            android:layout_height="88dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_edit_text"
            android:hint="Description"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_edit_text"
            android:hint="Manufacturer"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_edit_text"
            android:hint="Year"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_edit_text"
            android:hint="Purchase Date"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_edit_text"
            android:hint="Purchase Price"
            android:paddingStart="15dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_upload_image" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="-25dp"
            android:layout_marginBottom="16dp"
            android:text="Upload a image of your item"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="125dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_button_1"
            android:padding="10dp"
            android:text="Add Item"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>