<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/popup_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/closeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="275dp"
            android:background="@drawable/highlighter_cross" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="285dp"
            android:layout_height="82dp"
            android:layout_marginTop="-45dp"
            android:src="@drawable/lb_add_an_item"
            app:tint="?attr/colorSecondary" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="Enter the details of the item you would like to create."
            android:textColor="?attr/colorOnPrimary" />

        <EditText
            android:id="@+id/enterItemName"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_edit_text"
            android:hint="Item Name"
            android:textColorHint="?attr/colorOnPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/enterItemDescription"
            android:layout_width="250dp"
            android:layout_height="88dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_edit_text"
            android:hint="Description"
            android:paddingStart="15dp"
            android:textColorHint="?attr/colorOnPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:inputType="textMultiLine" />

        <EditText
            android:id="@+id/enterManufacturer"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_edit_text"
            android:hint="Manufacturer"
            android:textColorHint="?attr/colorOnPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/enterProductionYear"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_edit_text"
            android:hint="Manufactured Year"
            android:textColorHint="?attr/colorOnPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:inputType="date"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/enterPurchaseDate"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_edit_text"
            android:hint="Purchase Date"
            android:textColorHint="?attr/colorOnPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:inputType="date"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/enterPurchasePrice"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_edit_text"
            android:hint="Purchase Price"
            android:textColorHint="?attr/colorOnPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:inputType="numberDecimal"
            android:paddingStart="15dp" />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_upload_image" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="-35dp"
            android:layout_marginBottom="16dp"
            android:text="Upload image from gallery"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnCamera"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_baseline_photo_camera_24" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="-35dp"
            android:layout_marginBottom="16dp"
            android:text="Upload image from camera"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="16dp" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-60dp"
            android:layout_marginStart="255dp"
            android:background="@drawable/cancel_button"
            android:visibility="gone"/>


        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_button_1"
            android:padding="10dp"
            android:text="Add Item"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="visible"/>
    </LinearLayout>
</ScrollView>