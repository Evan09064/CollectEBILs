<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/popup_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/closeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="275dp"
            android:background="@drawable/highlighter_cross" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="330dp"
            android:layout_height="111dp"
            android:layout_marginStart="-30dp"
            android:layout_marginTop="-45dp"
            android:src="@drawable/lb_add_an_item_wishlist"
            app:tint="?attr/colorSecondary"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:text="Enter the name of the item you would like have in this collection."
            android:textColor="?attr/colorOnPrimary"  />

        <EditText
            android:id="@+id/catEditText"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_edit_text"
            android:hint="Item Name"
            android:paddingStart="15dp"
            android:textColorHint="?attr/colorOnPrimary"
            android:textColor="?attr/colorOnPrimary"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/ic_upload_image" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="-25dp"
            android:layout_marginBottom="16dp"
            android:text="Upload a image of the item"
            android:textColor="?attr/colorOnPrimary"  />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/round_button_1"
            android:padding="10dp"
            android:text="Add Item to Wishlist"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>