<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        tools:context=".CollectionDetailsActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondary"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/popup_background">

                <TextView
                    android:id="@+id/categoryName"
                    android:layout_width="match_parent"
                    android:layout_height="134dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="65dp"
                    android:gravity="center_horizontal"
                    android:text="Collection Name"
                    android:textAllCaps="true"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="55sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_background"
            android:layout_marginTop="-17dp"
            android:layout_marginHorizontal="-3dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">
            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginHorizontal="5dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="25dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="0dp"
                        android:background="@drawable/round_edit_text"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginVertical="10dp"
                            android:gravity="left"
                            android:text="Collection Goal:"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/categoryGoal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="200dp"
                            android:layout_marginTop="-38dp"
                            android:gravity="left"
                            android:text="Collection Goal"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="20dp"
                            android:gravity="left"
                            android:text="Number of items in collection:"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/itemNumber"
                            android:layout_width="294dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="35dp"
                            android:layout_marginTop="24dp"
                            android:gravity="left"
                            android:text="Number of items in collection"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="20sp"
                            android:inputType="number"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="20dp"
                            android:gravity="left"
                            android:text="Goal completion:"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/itemPercentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="210dp"
                            android:layout_marginTop="-28dp"
                            android:gravity="left"
                            android:text="Percentage"
                            android:textColor="?attr/colorOnPrimary"
                            android:textSize="20sp"
                            android:inputType="number"/>

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginHorizontal="35dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:progressDrawable="@drawable/custom_progress"/>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="225dp"
                        android:layout_marginTop="-62dp"
                        android:src="@drawable/yellow_curved_lines"
                        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>