
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CollectEBILs" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="23">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:navigationBarColor">@color/yellow</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true </item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.CollectEBILs.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorControlActivated">@color/yellow</item>
    </style>
    <style name="Theme.CollectEBILs.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.CollectEBILs.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name="customAttrs">
        <attr name="add_a_category" format="reference" />
        <attr name="explore" format="reference" />
    </declare-styleable>

</resources>